import { prisma } from "@/lib/prisma";
import { getUserFromCookie } from "@/lib/auth";
import { getServerI18n } from "@/i18n/server";
import { productDisplayInfo } from "@/lib/products";

type OrderRow = {
  id: string;
  productId: string | null;
  priceCents: number | null;
  status: string;
  createdAt: Date;
};

export default async function DashboardPage() {
  const { t, lang } = await getServerI18n();
  const user = getUserFromCookie();
  if (!user) {
    return (
      <section className="px-6 py-16 text-white">
        <div className="max-w-screen-xl mx-auto">
          <h1 className="text-xl font-semibold mb-2">{t("dashboard.title")}</h1>
          <p className="text-zinc-400">{t("dashboard.needLogin")}</p>
        </div>
      </section>
    );
  }

  const rows = (await prisma.order.findMany({
    where: { userId: user.sub },
    orderBy: { createdAt: "desc" },
    select: {
      id: true,
      productId: true,
      priceCents: true,
      status: true,
      createdAt: true,
    },
  })) as unknown as OrderRow[];

  const money = new Intl.NumberFormat(
    lang === "de" ? "de-DE" : "en-US",
    { style: "currency", currency: "EUR" }
  );

  const statusMap: Record<string, string> = {
    PENDING: t("dashboard.status.PENDING"),
    PAID: t("dashboard.status.PAID"),
    CANCELED: t("dashboard.status.CANCELED"),
    FAILED: t("dashboard.status.FAILED"),
    REFUNDED: t("dashboard.status.REFUNDED"),
  };

  return (
    <section className="px-6 py-16 text-white">
      <div className="max-w-screen-xl mx-auto">
        <h1 className="text-xl font-semibold mb-6">{t("dashboard.title")}</h1>

        <div className="rounded-2xl border border-white/10 bg-white/[0.05] p-6 backdrop-blur-sm">
          <h2 className="text-lg font-semibold mb-4">{t("dashboard.orders")}</h2>

          {rows.length === 0 ? (
            <div className="text-sm text-zinc-400">{t("dashboard.noOrders")}</div>
          ) : (
            <div className="overflow-x-auto">
              <table className="w-full text-sm">
                <thead className="text-left text-zinc-400 border-b border-white/10">
                  <tr>
                    <th className="py-2 pr-4">{t("dashboard.col.product")}</th>
                    <th className="py-2 pr-4">{t("dashboard.col.amount")}</th>
                    <th className="py-2 pr-4">{t("dashboard.col.status")}</th>
                    <th className="py-2">{t("dashboard.col.date")}</th>
                  </tr>
                </thead>
                <tbody>
                  {rows.map((r) => {
                    const key = (r.productId || "") as keyof typeof productDisplayInfo;
                    const product = productDisplayInfo[key];
                    const title = product?.title ?? t("dashboard.unknownProduct");
                    const amt = money.format(((r.priceCents ?? 0) as number) / 100);
                    const st = statusMap[r.status] ?? r.status;
                    const dt = new Intl.DateTimeFormat(
                      lang === "de" ? "de-DE" : "en-US",
                      { year: "numeric", month: "short", day: "2-digit" }
                    ).format(new Date(r.createdAt));
                    return (
                      <tr key={r.id} className="border-b border-white/5">
                        <td className="py-2 pr-4">{title}</td>
                        <td className="py-2 pr-4">{amt}</td>
                        <td className="py-2 pr-4">{st}</td>
                        <td className="py-2">{dt}</td>
                      </tr>
                    );
                  })}
                </tbody>
              </table>
            </div>
          )}
        </div>
      </div>
    </section>
  );
}
